---
import Reveal from '../components/Reveal.astro';
import { services } from '../data/services';
---

<section id="services" class="relative py-24">
	<div class="max-w-7xl mx-auto px-4">
		<Reveal class="max-w-3xl">
			<h2 class="text-3xl md:text-4xl font-semibold text-white">
				How I help teams ship faster
			</h2>
			<p class="mt-4 text-lg text-slate-300/85 leading-relaxed">
				Fractional product leadership or embedded engineering sprints—every
				engagement is built to unblock creative founders and fabrication teams.
			</p>
		</Reveal>
		<div class="mt-16 grid gap-8 md:grid-cols-2 xl:grid-cols-3">
			{
				services.map((service, index) => (
					<Reveal class="glass p-8 space-y-4" delay={index * 120}>
						<div class="text-3xl">{service.icon}</div>
						<h3 class="text-2xl font-semibold text-white">{service.label}</h3>
						<p class="text-base text-slate-300/90 leading-relaxed">
							{service.description}
						</p>
						<ul class="text-sm text-quartz/80 space-y-2">
							{service.highlights.map((item) => (
								<li>➤ {item}</li>
							))}
						</ul>
					</Reveal>
				))
			}
		</div>
	</div>
</section>
